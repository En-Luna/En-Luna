                                    @Html.ValidationMessageFor(model => model.HoursAvailablePerWeek, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.CurrentWorkload, htmlAttributes: new { @class = "control-label" })
